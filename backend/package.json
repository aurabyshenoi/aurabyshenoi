{
  "name": "aurabyshenoi-backend",
  "version": "1.0.0",
  "description": "Backend API for AuraByShenoi website",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "build:production": "NODE_ENV=production tsc",
    "start": "node dist/server.js",
    "start:production": "NODE_ENV=production node dist/server.js",
    "start:pm2": "pm2 start dist/server.js --name aurabyshenoi-backend",
    "stop:pm2": "pm2 stop aurabyshenoi-backend",
    "restart:pm2": "pm2 restart aurabyshenoi-backend",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "email-preview": "npm run build && node scripts/generateEmailPreviews.js",
    "logs": "tail -f logs/*.log",
    "health-check": "curl -f http://localhost:3001/health || exit 1"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "stripe": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
